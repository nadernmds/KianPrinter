@model IEnumerable<Shop.Models.Store>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<p>
    
    <a class="btn btn-primary" href="/Store/Create">جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.cityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.cityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.name)
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id=item.storeID }) |
            @Html.ActionLink("مشاهده", "Details", new { id=item.storeID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.storeID })
        </td>
    </tr>
}

</table>
