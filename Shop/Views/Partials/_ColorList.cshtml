        <div style="position:relative">
            <input id="searchColor" style="padding-right:30px;margin-right:10px;text-align:right" onkeyup="searchColorFunction()" type="search" name="text" value="" placeholder="جستجو" class="s-productlist-search" />
            <i class="fa fa-search"style="z-index:2;padding-top:5px;padding-right:10px"></i>
        </div>
        <div class="panel-body mostly-customized-scrollbar" style="overflow-y: scroll;min-height:50px;max-height:300px;margin-top:30px">
            <div>
                <div>
                </div>
            </div>
            <ul style="list-style:none;padding-right:0px;margin-top:50px" id="Value">
                @if (Model != null)
                {

                    foreach (var item in Model)
                    {
                        @Html.Partial("~/Views/Partials/_ColorItem.cshtml", item)
                    }
                }

            </ul>
        </div>

    </div>
</div>

