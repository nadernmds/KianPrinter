<div style="position:relative">
    <div id="gallery" style="width: 100%">
        @foreach (var item in Model)
        {
            if (item.show != null && (bool)item.show)
            {
                <a class="s-carosel-galleryimgages"
                   style="width: 100%; height: 100%;position: absolute;">
                    <img style="height:100%;width:100%;object-fit:cover" src="/Images/ShopCarousel/@(item.shopCarouselID).jpg" alt="@item.shopCarouselID" />
                </a>
            }

        }
        <div style="z-index: 2;" class="s-slider-icon" onclick="prevgallery()"> <i class="fas fa-chevron-left" style="color:white"></i></div>
        <div style="z-index: 2;" class="s-slider-icon" onclick="nextgallery()"><i class="fas fa-chevron-right" style="color:white"></i></div>
    </div>
</div>
