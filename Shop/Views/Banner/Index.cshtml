@model IEnumerable<Shop.Models.Banner>

@{
    ViewBag.Title = "Index";
   
}

@*<h2>Index</h2>*@

<table class="table">
    <tr>
        <th>
            عکس
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td >
            <img style="max-height:200px ; max-width:300px"  src="~/Images/Banner/@(item.bannerID).JPG" />

        </td>
        <td style="vertical-align:middle">
            @Html.DisplayFor(modelItem => item.url)
        </td>
        <td style="vertical-align:middle">
            @Html.ActionLink("ویرایش", "Edit", new { id=item.bannerID }) |
            @Html.ActionLink("مشاهده", "Details", new { id=item.bannerID }) 
            @*@Html.ActionLink("حذف", "Delete", new { id=item.bannerID })*@
        </td>
    </tr>
}

</table>
