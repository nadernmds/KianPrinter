
@{
    ViewBag.Title = "sendResetPasswordCode";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div  class="col-lg-3"></div>
        <div style="padding:20px" class="col-lg-6">
            <form action="/User/sendResetPasswordCode" method="post">
                <p style="font-size:18px">برای باز یابی رمز عبور ایمیل خود را وارد کنید</p>
                <div class="subtitle"></div>
                <div class="form-group">
                    <label class="control-label" for="input-email">ایمیل</label>
                    <input type="text" name="email" value="" placeholder="ایمیل" id="input-email" class="form-control text-right" />
                </div>
                <input type="submit" value="ارسال" class="btn btn-primary" style="float:left;margin:10px" />
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>