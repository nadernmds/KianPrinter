
@{
    ViewBag.Title = "resetPassword";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div style="padding:20px" class="col-lg-6 col-md-6 col-sm-6 col-md-offset-4">
            <form action="/User/resetPassword" method="post">
                <h1>بازیابی رمز عبور</h1>
                <div class="subtitle"></div>
                <div class="form-group">
                    <label class="control-label" for="input-newPassword">رمز جدید</label>
                    <input type="text" name="newPassword" value="" placeholder="رمز جدید" id="input-newPassword" class="form-control text-right" />
                </div>
                <div class="form-group">
                    <label class="control-label" for="input-passwordConfirm">تکرار رمز </label>
                    <input type="text" name="passwordConfirm" value="" placeholder="تکرار رمز" id="input-passwordConfirm" class="form-control text-right" />
                </div>
                    <input type="hidden" name="resetPasswordCode" value="@ViewBag.resetPasswordCode"  id="input-resetPasswordCode" class="form-control text-right" />

                <input type="submit" value="ارسال" class="btn btn-primary" style="float:left;margin:10px" />

            </form>
        </div>
    </div>
</div>

