@model Shop.Models.Address
@{
    var user = (Shop.Models.User)ViewBag.user;
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<div style="width:98.9%;background-color:#f5f5f5;">
    <div class="row">
        <div class="container-fluid" style="margin-top:30px">
            <div class="row">
                <div class="col-sm-3">
                    <div class="col-sm-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p> نام : @user.name</p>
                                <p> نام کاربری: @user.username</p>
                                <p> موبایل : @user.mobile</p>
                                <a style="border-radius:50%;position:absolute;top:7px;left:20px" class="btn btn-default" href="/panel/profile"><i class="fa fa-edit "></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <a class="text-primary" href="/panel"><i style="font-size:16px" class="fa fa-user "></i> &ensp; پروفایل </a>
                                <br />
                                <br />
                                <a class="text-primary" href="/panel/Orders"><i style="font-size:16px" class="fa fa-cart-arrow-down "></i> &ensp; همه ی سفارش ها </a>
                                <br />
                                <br />
                                <a class="text-primary" href="/panel/addresses"><i style="font-size:16px" class="fa fa-map-marker "></i>   &ensp; آدرس </a>

                                <br />
                                <br />
                                <a class="text-primary" href="/panel/comments"><i style="font-size:16px" class="fa fa-comment "></i>   &ensp; کامنت  </a>

                                <br />
                                <br />
                                <a class="text-primary" href="/panel/questinsAnswers"><i style="font-size:16px" class="fa fa-question "></i>   &ensp; سوال و جواب  </a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-9">
                    <form method="post" action="/panel/updateProfile">
                        <div class="col-sm-12">
                            <div class="panel panel-default">
                                <div class="form-horizontal">
                                    <h4 style="padding-right:20px">تغییر اطلاعات کاربری</h4>

                                    @foreach (var item in Model)
                                    {

                                        <div class="form-group">
                                            <label class="control-label col-sm-2">آدرس:</label>
                                            <div class="col-sm-9">
                                                <textarea type="text" rows="4" readonly class="form-control text-right" name="addressDetail">@item.addressDetail</textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-2">کد پستی:</label>
                                            <div class="col-sm-9">
                                                <input type="text" readonly class="form-control text-right" value="@item.postalCode" name="postalCode" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-sm-2">موبایل:</label>
                                            <div class="col-sm-9">
                                                <input type="text" readonly class="form-control text-right" value="@item.mobile" name="addressDetail" />
                                            </div>
                                            <a class="btn btn-default" style="margin:15px" href="/panel/deleteAddress/@item.addressID">حذف آدرس</a>
                                        </div>
                                        <hr />
                                    }
                                    <button type="submit" class="btn btn-primary" style="margin:20px">ثبت</button>


                                </div>
                            </div>
                        </div>

                    </form>



                </div>

            </div>
        </div>
    </div>
</div>


