@model Shop.Models.Invoice
@using System.Globalization
@{
    ViewBag.Title = "Receipt";
    Layout = "~/Views/Shared/_PupularLayout.cshtml";
}
<style>
    input[type=text] {
        width: 250px;
        height: 35px;
        border-radius: 4px;
        outline: none;
        border: 1px solid #DDDDDD;
        padding: 8px;
    }

    input:focus {
        border-color: #16a7eb;
        box-shadow: 0 0 5px rgba(81, 203, 238, 1);
