@using Shop.Models;
@{

    ViewBag.Title = "پشتیبانی";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var db = new Rizkaran_SiteEntities();
    //var user = (User)Session["RPG"] ?? new User();
}
<style>

    #snackbar {
        visibility: hidden;
        min-width: 250px;
        margin-left: -125px;
        background-color: #333;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 16px;
        position: fixed;
        z-index: 1;
        left: 50%;
        bottom: 30px;
        font-size: 17px;
    }

        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }
</style>
@RenderSection("Styles", false)
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@*پنل خدمت*@</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div id="panels" class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">&nbsp;</div>
                        <div>کاربران</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("index", "user")">
                <div class="panel-footer">
                    <span>مشاهده</span>
                    <span><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-bag fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">&nbsp;</div>
                        <div>محصول</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("index", "product")">
                <div class="panel-footer">
                    <span>مشاهده</span>
                    <span><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-tags fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">&nbsp;</div>
                        <div>ویژگی های محصول</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("index", "unit")">
                <div class="panel-footer">
                    <span>مشاهده</span>
                    <span><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-question-circle fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">&nbsp;</div>
                        <div>سوال و جواب</div>
                    </div>
                </div>
            </div>

            <a href="@Url.Action("index", "question")">
                <div class="panel-footer">
                    <span>مشاهده</span>
                    <span><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

</div>
<div style="direction:rtl !important;text-align:right !important">
    @RenderBody()
</div>

@section Scripts{
    @RenderSection("Scripts", false)
}
