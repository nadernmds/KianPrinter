                    <a class="text-primary" href="/panel/comments"><i style="font-size:16px" class="fa fa-comment "></i>   &ensp; نظرات  </a>
                    <a class="text-primary" href="/panel/questinsAnswers"><i style="font-size:16px" class="fa fa-question "></i>   &ensp; سوال و جواب  </a>

                </div>
            </div>
            <div class="s-panel-left">
                @RenderBody()
            </div>
        </div>
    </div>
    
@section scripts{

    @RenderSection("scripts", false)
}
