
@{
    ViewBag.Title = "پنل مدیریت";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    var user = (Shop.Models.User)Session["UU!#user"] ?? new Shop.Models.User();
}
@RenderSection("styles", false);
    <div id="panel-holder">
        <div id="panel">
            <div class="s-panel-right">
